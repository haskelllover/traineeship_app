<!DOCTYPE HTML>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Company Profile</title>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3>Company Profile</h3>
            </div>
            <div class="card-body">
                <!-- Success/Error Messages -->
                <div th:if="${successMessage}" class="alert alert-success" th:text="${successMessage}"></div>
                <div th:if="${errorMessage}" class="alert alert-danger" th:text="${errorMessage}"></div>
                
                <form th:action="@{/company/profile}" 
                      th:object="${company}" 
                      method="POST">
                    
                    <!-- CSRF Protection -->
                    <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />
                    
                    <!-- Hidden fields -->
                    <input type="hidden" th:field="*{id}" />
                    <input type="hidden" th:field="*{username}" />
                    
                    <!-- Company Name -->
                    <div class="mb-3">
                        <label class="form-label">Company Name</label>
                        <input type="text" th:field="*{companyName}" class="form-control">
                        <div th:if="${#fields.hasErrors('companyName')}" 
                             th:errors="*{companyName}" 
                             class="text-danger"></div>
                    </div>
                    
                    <!-- Company Location -->
                    <div class="mb-3">
                        <label class="form-label">Company Location</label>
                        <input type="text" th:field="*{companyLocation}" class="form-control">
                        <div th:if="${#fields.hasErrors('companyLocation')}" 
                             th:errors="*{companyLocation}" 
                             class="text-danger"></div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Save Profile</button>
                        <a th:href="@{/company/dashboard}" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
                
                <hr>
                <a th:href="@{/company/dashboard}" class="btn btn-outline-secondary btn-sm">Back to Dashboard</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
