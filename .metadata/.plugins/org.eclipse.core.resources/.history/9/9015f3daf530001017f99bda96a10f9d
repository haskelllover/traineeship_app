<!DOCTYPE HTML>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Company Profile</title>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Company Profile</h3>
                <a th:href="@{/company/dashboard}" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            <div class="card-body">
                <!-- Success/Error Messages -->
                <div th:if="${successMessage}" class="alert alert-success" th:text="${successMessage}"></div>
                <div th:if="${errorMessage}" class="alert alert-danger" th:text="${errorMessage}"></div>
                
                <form th:action="@{/company/profile}" 
                      th:object="${company}" 
                      method="POST">
                    
                    <!-- CSRF Protection -->
                    <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />
                    
                    <!-- Hidden ID field -->
                    <input type="hidden" name="id" th:value="${company.id}" />
                    
                    <!-- Hidden username field -->
                    <input type="hidden" name="username" th:value="${company.username}" />
                    
                    <!-- Company Name -->
                    <div class="mb-3">
                        <label class="form-label">Company Name</label>
                        <input type="text" class="form-control" 
                               name="companyName" th:value="${company.companyName}" required>
                    </div>
                    
                    <!-- Company Location -->
                    <div class="mb-3">
                        <label class="form-label">Company Location</label>
                        <input type="text" class="form-control" 
                               name="companyLocation" th:value="${company.companyLocation}" required>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Save Profile</button>
                        <a th:href="@{/company/dashboard}" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Add Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
