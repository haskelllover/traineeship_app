<!DOCTYPE HTML>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Student Profile</title>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3>Student Profile</h3>
            </div>
            <div class="card-body">
                <!-- Success/Error Messages -->
                <div th:if="${successMessage}" class="alert alert-success" th:text="${successMessage}"></div>
                <div th:if="${errorMessage}" class="alert alert-danger" th:text="${errorMessage}"></div>
                
                <form th:action="@{/student/save-profile}" 
                      th:object="${student}" 
                      method="POST">
                    
                    <!-- CSRF Protection -->
                    <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />
                    
                    <!-- Hidden fields -->
                    <input type="hidden" th:field="*{id}" />
                    <input type="hidden" th:field="*{username}" />
                    
                    <!-- Student Name -->
                    <div class="mb-3">
                        <label class="form-label">Student Name</label>
                        <input type="text" th:field="*{studentName}" class="form-control">
                        <div th:if="${#fields.hasErrors('studentName')}" 
                             th:errors="*{studentName}" 
                             class="text-danger"></div>
                    </div>
                    
                    <!-- AM -->
                    <div class="mb-3">
                        <label class="form-label">Student ID (AM)</label>
                        <input type="text" th:field="*{AM}" class="form-control">
                        <div th:if="${#fields.hasErrors('AM')}" 
                             th:errors="*{AM}" 
                             class="text-danger"></div>
                    </div>
					
					<!-- Department -->
					<div class="mb-3">
					    <label class="form-label">Department</label>
					    <input type="text" th:field="*{department}" class="form-control">
					    <div th:if="${#fields.hasErrors('department')}" 
					         th:errors="*{department}" 
					         class="text-danger"></div>
					</div>
                    
                    <!-- Year of Studies -->
                    <div class="mb-3">
                        <label class="form-label">Year of Studies</label>
                        <input type="number" th:field="*{yearOfStudies}" class="form-control" min="1" max="5">
                        <div th:if="${#fields.hasErrors('yearOfStudies')}" 
                             th:errors="*{yearOfStudies}" 
                             class="text-danger"></div>
                    </div>
                    
                    <!-- Average Grade -->
                    <div class="mb-3">
                        <label class="form-label">Average Grade</label>
                        <input type="number" th:field="*{avgGrade}" class="form-control" step="0.01" min="0" max="10">
                        <div th:if="${#fields.hasErrors('avgGrade')}" 
                             th:errors="*{avgGrade}" 
                             class="text-danger"></div>
                    </div>
					
					<!-- Interests -->
					<div class="mb-3">
					    <label class="form-label">Interests (comma separated)</label>
					    <input type="text" 
					           th:value="${#strings.listJoin(student.interests, ', ')}" 
					           name="interests[0]"  <!-- Important: array notation -->
					           class="form-control" 
					           placeholder="e.g., Web Development, Data Science">
					    <div th:if="${#fields.hasErrors('interests')}" 
					         th:errors="*{interests}" 
					         class="text-danger"></div>
					</div>

					<!-- Skills -->
					<div class="mb-3">
					    <label class="form-label">Skills (comma separated)</label>
					    <input type="text" 
					           th:value="${#strings.listJoin(student.skills, ', ')}" 
					           name="skills[0]"  <!-- Important: array notation -->
					           class="form-control" 
					           placeholder="e.g., Java, Python, SQL">
					    <div th:if="${#fields.hasErrors('skills')}" 
					         th:errors="*{skills}" 
					         class="text-danger"></div>
					</div>
					
					<!-- Preferred Location -->
					<div class="mb-3">
					    <label class="form-label">Preferred Location</label>
					    <input type="text" th:field="*{preferredLocation}" class="form-control" placeholder="e.g., Athens, Remote">
					    <div th:if="${#fields.hasErrors('preferredLocation')}" 
					         th:errors="*{preferredLocation}" 
					         class="text-danger"></div>
					</div>
					
                    <button type="submit" class="btn btn-primary">Save Profile</button>
                    <a th:href="@{/student/dashboard}" class="btn btn-secondary">Cancel</a>
                </form>
				<hr>
					<a th:href="@{/student/dashboard}">Back to Student Dashboard</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
