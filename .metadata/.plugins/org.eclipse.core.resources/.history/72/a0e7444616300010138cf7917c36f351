                    <div class="card-body">
                        <div th:if="${positions.empty}" class="alert alert-info">
                            You currently have no assigned traineeships.
                        </div>
                        
                        <table th:unless="${positions.empty}" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Position Title</th>
                                    <th>Student</th>
                                    <th>Company</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr th:each="position : ${positions}">
                                    <td th:text="${position.title}"></td>
                                    <td th:text="${position.student?.name} ?: 'Not assigned'"></td>
                                    <td th:text="${position.company.name}"></td>
                                    <td>
                                        <span th:switch="${position.status}" class="badge">
                                            <span th:case="'ACTIVE'" class="bg-success">Active</span>
                                            <span th:case="'COMPLETED'" class="bg-info">Completed</span>
                                            <span th:case="*" class="bg-secondary">Pending</span>
                                        </span>
                                    </td>
                                    <td>
                                        <a th:href="@{/professor/assignees/{id}/evaluate(id=${position.id})}" 
                                           class="btn btn-sm btn-primary" th:if="${position.status == 'ACTIVE'}">
                                            <i class="bi bi-clipboard-check"></i> Evaluate
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <a th:href="@{/professor/dashboard}" class="btn btn-secondary mt-3">
