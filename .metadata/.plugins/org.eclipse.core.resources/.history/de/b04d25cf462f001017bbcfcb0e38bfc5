package com.myy803.traineeship_app.services;

import org.springframework.stereotype.Component;
import java.util.Map;

@Component
public class PositionsSearchFactory {
    private final Map<String, PositionsSearchStrategy> strategies;

    public PositionsSearchFactory(Map<String, PositionsSearchStrategy> strategies) {
        this.strategies = strategies;
    }

    public PositionsSearchStrategy create(String strategy) {
        return strategies.get(strategy);
    }
}