<body>
    <div class="container">
        <p class="h4 mb-4">Student Profile</p>
    
        <form action="#" th:action="@{/student/save_profile}"
              th:object="${student}" method="POST">
        
            <!-- Add hidden form field to handle update -->
            <input type="hidden" th:field="*{username}" />
            
            <label>Student Name</label>
            <input type="text" th:field="*{studentName}"
                   class="form-control mb-4 col-4">
            <div th:if="${#fields.hasErrors('studentName')}" th:errors="*{studentName}" 
                 class="alert alert-danger"></div>
        
            <label>AM</label>
            <input type="text" th:field="*{AM}"
                   class="form-control mb-4 col-4">
            <div th:if="${#fields.hasErrors('AM')}" th:errors="*{AM}" 
                 class="alert alert-danger"></div>

            <label>Year of Studies</label>
            <input type="number" th:field="*{yearOfStudies}" min="1" max="5"
                   class="form-control mb-4 col-4">
            <div th:if="${#fields.hasErrors('yearOfStudies')}" th:errors="*{yearOfStudies}" 
                 class="alert alert-danger"></div>

            <label>Average Grade</label>
            <input type="number" th:field="*{avgGrade}" step="0.01" min="0" max="10"
                   class="form-control mb-4 col-4">
            <div th:if="${#fields.hasErrors('avgGrade')}" th:errors="*{avgGrade}" 
                 class="alert alert-danger"></div>
                
            <button type="submit" class="btn btn-info col-2">Save</button>
                        
        </form>
    
        <hr>
        <a th:href="@{/student/dashboard}">Back to Student Dashboard</a>
    </div>
